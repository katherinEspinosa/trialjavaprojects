package GridLayout;

import java.awt.Dimension;
import java.awt.LayoutManager;
import java.awt.*;
import javax.swing.GroupLayout;
import javax.swing.JButton;

import javax.swing.JFrame;

public class App {
    public static void main(String[] args){
        //Layout Manager = Defines the natural layout for components within a container

        //GridLayout = places components in a grid of cells 
        //           = Each component takes all the available space within its cell,
        //             and each cell is the same size



        JFrame frame = new JFrame();
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(new Dimension (500,500));
        frame.setLayout(new GridLayout(3,3,10,10)); //Gridlayout with rows and columns and horizontal and vertical pixel gaps


        // JButton button1 = new JButton("1");
        // frame.add(button1); long version of adding JButton to a frame

        frame.add(new JButton("1")); //short version of adding JButton to a frame
        frame.add(new JButton("2"));
        frame.add(new JButton("3"));
        frame.add(new JButton("4"));
        frame.add(new JButton("5"));
        frame.add(new JButton("6"));
        frame.add(new JButton("7"));
        frame.add(new JButton("8"));
        frame.add(new JButton("9"));
        // frame.add(new JButton("10"));

        


        frame.setVisible(true);
    }
    
}
